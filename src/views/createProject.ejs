
    
    <section class="py-5 bg-success p-2 text-dark bg-opacity-10 border border-0">
        <div class="container border border-light-subtle">
            <h2 class="text-center mb-4">Create New Project</h2>
            <form method="post" action="/create">
                <div class="mb-3">
                    <label for="pName" class="form-label">Project Name</label>
                    <input type="text" class="form-control" id="pName" name="pName" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" name="author" required>
                </div>
                <button type="submit" class="btn btn-primary">Create Project</button>
            </form>
        </div>
    </section>
    

